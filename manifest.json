{
  "manifest_version": 3,
  "name": "Website measure",
  "version": "0.1",
  "description": "Very simple Mozilla Firefox addon, which is measuring how long you are on the active tab of the Firefox browser...",

  "action": {
    "default_icon": {
      "16": "icons/main_icon.png"
    },
    "default_title": "Whereami?",
    "default_popup": "popup/popup.html"
  },

  "options_page": "options.options.html",

  "icons": {
    "48": "icons/main_icon.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["measure.js"]
    }
  ],

  "host_permissions": ["*://*.mozilla.org/*"]
}